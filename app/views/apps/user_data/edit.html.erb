<%= render "shared/modal" do %>
	<%= form_for @tag, 
		url: app_user_datum_path(@app.key, @tag.name), 
		method: :patch,
		data: {'turbo-frame': '_top' } do |f|%>

		<%= f.text_field :name %>

		<% options = I18n.t('settings.user_data.attr_types') %>
		
		aaaa
		<%= f.object.type %>
		bbbb
		<%= f.select :type, options_for_select(options.map{|k,v| [v, k]}, nil), {}, {
			label: I18n.t('definitions.settings.languages.select_lang')
		} 
		%>

		<%= f.submit(t("common.submit"), class: "btn btn-success")%>
	<% end %>
<% end %>