<%= render Content::Component.new do %>

	<%= turbo_frame_tag 'app-settings' do %>

		<%= render PageHeader::Component.new(title: I18n.t('settings.app.user_data')) do %>
			
			
			<%= render UpgradeButton::Component.new(
					label: I18n.t('articles.settings.add_language'),
					label: "Add custom attribute",
					size: "sm",
					feature: "CustomAttributes",
					app: @app
				) do %>
				<%= link_to( I18n.t('common.add_new'), 
					new_app_user_datum_path(@app.key), 
					data: {
					'turbo-frame': 'modal'
					}, 
					class: "btn btn-flat-dark sm") 
				%>
			<% end %>
		<% end %>

		<%= render Tabs::Component.new(	items: settings_menu_data(app: @app) ) do %>

			<%= render Hints::Component.new(type: 'user_data') %>

			<p class="text-lg leading-6 font-medium  text-gray-900 dark:text-gray-100 py-4">
				<%= t('settings.user_data.title') %>
			</p>

			<div class="pb-8">
				<%= render 'table' %>
			</div>

			<p class="text-lg leading-6 font-medium text-gray-900 dark:text-gray-100">
				<%= t('settings.user_data.default_fields') %>
			</p>

			<p class="mt-2 max-w-xl text-sm leading-5 text-gray-500 dark:text-gray-300">
				<%= t('settings.user_data.non_editable') %>
			</p>

			<div class="align-middle min-w-full overflow-x-auto shadow overflow-hidden sm:rounded-lg">
				<%= render ListRenderer::Component.new(field: @data) %>
			</div>
		<% end %>

	<% end %>	
<% end %>