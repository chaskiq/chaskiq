   <div class="md:hidden pl-1 pt-1 sm:pl-3 sm:pt-3">
      <button class="-ml-0.5 -mt-0.5 h-12 w-12 inline-flex items-center justify-center rounded-md text-gray-500 hover:text-gray-900 focus:outline-none focus:bg-gray-200 transition ease-in-out duration-150">
         <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
         </svg>
      </button>
   </div>


   <div class="flex">

      <div data-controller="infinite-scroll" 
         class="<%= params[:id] ? 'hidden' : '' %> w-full min-w-[367px] md:w-4/12 h-screen md:border-r sm:block border-gray-200 dark:border-gray-900">
         
         <%= render "apps/conversations/search_filters", 
            sort: @sort, 
            filter: @filter 
         %>

         <div class="hidden">
            <%= form_for @search_service, 
               url: search_app_conversations_path(@app.key), 
               method: :post,
               data: {
                  controller: 'search-conversations',
                  action: "item:add->cart#refreshTotal"
               } do |f| %>
               <%= f.text_field :term, "data-action": "change->search-conversations#handleChange" %>
               <%= f.text_field :tag, "data-action": "change->search-conversations#handleChange" %>
               <%= f.text_field :agent_id, "data-action": "change->search-conversations#handleChange" %>
               <%= f.text_field :filter, "data-action": "change->search-conversations#handleChange" %>
               <%= f.text_field :sort, "data-action": "change->search-conversations#handleChange" %>
               <%= f.text_field :channel_id, "data-action": "change->search-conversations#handleChange" %>
               <%= f.submit %>
            <% end %>
         </div>

         <div 
            class="overflow-scroll" 
            style="height: calc(100vh - 60px);"
            data-infinite-scroll-target="entries"
            >
            <%= render 'collection' %>
            <div class="invisible h-1" data-infinite-scroll-target="pagination">
               <%= render partial: 'apps/conversations/pagination' %>
            </div>
         </div>

		
			<% #= turbo_frame_tag dom_id(@next_conversations), loading: :lazy, src: app_conversations_path(@app, page: @next_page]) if @next_page.present? %>

      </div>

      <%= turbo_frame_tag 'conversation',
         data: { controller: 'conversation' },
         src: @conversation ? app_conversation_path(@app.key, @conversation.key ) : nil,
         class: "flex w-full" do %>
         <div class="w-full bg-white dark:bg-gray-900 overflow-hidden  rounded-lg py-5 h-full">
            <div class="flex flex-col px-4 py-5 sm:p-6 items-center">
               <h2 class="text-2xl tracking-tight
                     font-extrabold text-gray-900 dark:text-white sm:text-3xl
                     sm:leading-none md:text-4xl">
                     <%= t("conversations.empty.title")%>
               </h2>
               <div class="py-4 mt-3 text-base text-gray-500 dark:text-gray-200 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                  <%= t("conversations.empty.text")%>
               </div>
               <%= image_tag 'empty-icon8.png', 
                  class: "h-56 w-56",
                  alt: t("conversations.empty.title")
               %>
            </div>
         </div>
      <% end %>
      
   </div>
