
<%= turbo_stream.update("bbbb") do %>
  <div data-controller="package-iframe" data-html="<%= CGI.escape(@html) %>">
    <%= content_tag :iframe, '', src: 'about:blank', 
    data:{ package_iframe_target:"iframe"},
    id: 'package-frame', 
    style: 'width:100%; height:100vh;' %>
