<%= render Content::Component.new do %>

	<%= turbo_frame_tag 'app-settings' do %>

		<%= render PageHeader::Component.new(title: I18n.t("articles.collections") ) do %>
			
			<%= link_to( t("articles.new_collection"), 
				new_app_articles_collection_path(@app.key), 
				data: {
				'turbo-frame': 'modal',
				}, 
				class: "btn btn-flat-dark sm") 
			%>

		<% end %>

		<%= render Tabs::Component.new(	items: articles_collections_menu_data(app: @app, article_setting: @article_setting ) ) do %>
			<% I18n.with_locale(params[:locale] || I18n.locale) do  %>			
				<%= render 'table' %>
			<% end %>
		<% end %>

	<% end %>
	
<% end %>