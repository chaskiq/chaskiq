<p class="text-lg leading-6 font-medium text-gray-900 dark:text-gray-100 pb-4">
	<%= I18n.t("articles.settings.basic") %>
</p>

<%= form_for @article_setting, url: app_articles_setting_path(@app.key, :basic) do |f| %>

	<div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-2 sm:grid-cols-6">
	
		<div class="sm:col-span-3">
			<%= f.text_field :subdomain %>
		</div>
		<div class="sm:col-span-3">
			<%= f.text_field :domain %>
		</div>
		<div class="sm:col-span-4">
			<%= f.text_field :website %>
		</div>
		<div class="sm:col-span-2">
			<%= f.text_field :google_code %>
		</div>

	</div>

	<%= f.submit(t("common.save"), class: "btn btn-success") %>
<% end %>