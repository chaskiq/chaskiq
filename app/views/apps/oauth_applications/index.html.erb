<%= render Content::Component.new do %>

	<%= turbo_frame_tag 'app-settings' do %>

		<%= render PageHeader::Component.new(title: I18n.t('settings.api.title') ) do %>

			<%= link_to( I18n.t('common.add_new'), 
				new_app_oauth_application_path(@app.key), 
				data: {
					'turbo-frame': 'modal'
				}, 
				class: "btn btn-flat-dark sm") 
			%>
		<% end %>

		<%= render Tabs::Component.new(	items: oauth_apps_menu_data(app: @app) ) do %>
			<%= render 'table' %>
		<% end %>

	<% end %>
	
<% end %>