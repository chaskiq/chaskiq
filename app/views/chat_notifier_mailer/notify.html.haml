                  %strong.name= @author_name
                  %span.dark{:style => ""} from #{@app_name}

    %tr{:height => "20"}
    %tr
      %td{:style => ""}
        %hr.divider/
    %tr
      %td{:style => ""}
        %table{:align => "left", :width => "100%"}
          %tbody
            %tr{:height => "15"}
            %tr
              %td#badge.lightText{:valign => "top"}
                Powered by
                %a.app_logo{:href => "https://chaskiq.io", :style => "", :target => "_blank"}
                  %strong Chaskiq
    %tr{:height => "35"}