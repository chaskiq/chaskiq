


<ak-grid>

  <ak-grid-column size="3"></ak-grid-column>
  <ak-grid-column size="6">


    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="ak-field-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ak-field-text" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "ak-button ak-button__appearance-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>



  </ak-grid-column>
  <ak-grid-column size="3"></ak-grid-column>
</ak-grid>

